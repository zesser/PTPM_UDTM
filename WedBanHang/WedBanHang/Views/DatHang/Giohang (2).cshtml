
@{
    ViewBag.Title = "Giohang";
}
@using WedBanHang.Models
@model List<GioHang>
<h2 style="margin-left:100px">Giỏ hàng</h2>
<table class="table" style="margin-left:100px; margin-right:100px; width: 1500px">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Số lượng</th>
            <th scope="col">Đơn giá</th>
            <th scope="col">Thành tiền</th>
            <th scope="col">Deleta</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
        <tr>
            <th scope="row">@i.TenSP</th>
            <td>
                <a class="btn btn-light" href="@Url.Action("UpdateSL",new {ma=i.MaSP,update=false})"><<</a>
                @i.Soluong
                <a class="btn btn-light" href="@Url.Action("UpdateSL",new {ma=i.MaSP,update=true})">>></a>
            </td>
            <td>@i.DonGia</td>
            <td>@i.ThanhTien</td>
            
            <td><a class="btn btn-outline-success my-2 my-sm-0" href="@Url.Action("DeleteSP",new {ma=i.MaSP })"><img src="~/Models/Icon/x.svg" /></a></td>
        </tr>
        }
        <tr>
            <td colspan="2">Tổng tiền : @ViewBag.Tongtien</td>
            <td colspan="2"><a class="btn btn-outline-success my-2 my-sm-0" href="@Url.Action("Dathang","DatHang")">Đặt hàng</a></td>
        </tr>
    </tbody>
</table>