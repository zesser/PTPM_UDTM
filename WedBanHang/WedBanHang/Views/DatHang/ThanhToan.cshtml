
@{
    ViewBag.Title = "ThanhToan";
}
@using WedBanHang.Models
@model HOADON
<div class="container">
    <h2>Hóa Đơn</h2>
    <div class="row">
        <form action="@Url.Action("XuLyEnd","Dathang")">
            <div class="form-row">
                <label for="name">Tên Người Nhận:</label>
                <input type="text" class="form-control" id="firstname" value="@Model.TENKHACHHANG" disabled>
            </div>
            <div class="form-group ">
                <label for="date">Ngày Giao:</label>
                <input type="date" class="form-control" id="day" value="@Model.NGAYLAP" disabled>
            </div>
            <div class="form-group">
                <label for="address">Address:</label>
                <input type="text" class="form-control" id="address" value="@Model.DIACHIGIAOHANG" disabled>
            </div>
            <div class="form-group">
                <label for="phone">Phone Number:</label>
                <input type="number" class="form-control" id="phone" value="@Model.SDTGIAOHANG" disabled>
            </div>
            <div class="form-group">
                <label for="tongtien">Tổng Tiền:</label>
                <input type="number" class="form-control" id="chietkhau" value="@ViewBag.TongTien" disabled>
            </div>
            <div class="form-group">
                <label for="chietkhau">Chiết Khấu:</label>
                <input type="number" class="form-control" id="chietkhau" value="@Model.CHIETKHAU" disabled>
            </div>
            <div class="form-group">
                <label for="Thanhtien">Thành Tiền:</label>
                <input type="number" class="form-control" id="chietkhau" value="@Model.THANHTIEN" disabled>
            </div>
            <button type="submit" class="btn btn-primary">Về Trang Chủ</button>
        </form>
    </div>
</div>

