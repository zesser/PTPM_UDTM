@model IEnumerable<WedBanHang.Models.sanpham>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="row mt-5">
        <h2 class="list-product-title" style="color:black">Danh sách sản phẩm</h2>
        <div class="product-group">
            <div class="row">
                @foreach (var i in Model)
                {
                    <div class="col-md-3 col-sm-6 col-12" width="440" height="300">
                        <div class="card card-product mb-3">
                            <img class="card-img-top" src="~/Models/anhsp/anhdoanweb/@i.hinhsp" width="440" height="300" alt="Card img cap" />
                            <div class="card-body">
                                <h5 class="card-title">@i.tensp</h5>
                                <p class="card-text">@i.giasp</p>
                                <a class="btn btn-outline-success my-2 my-sm-0" href="@Url.Action("SanPham",new { Ma = i.masp })">Xem chi tiết</a>
                                <a class="btn btn-outline-success my-2 my-sm-0" href="@Url.Action("ThemGioHang","DatHang",new {Ma= i.masp,select=1})">Mua ngay</a>
                            </div>
                        </div>
                    </div>}
            </div>
        </div>
    </div>
</div>
