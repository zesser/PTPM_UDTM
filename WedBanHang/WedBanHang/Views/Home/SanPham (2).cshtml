@{
    ViewBag.Title = "SanPham";
}
@{
    <link href="~/Scripts/StyleSheet1.css" rel="stylesheet" />
}
@using WedBanHang.Models
@model SANPHAM
<div class="jumbotron text-center">
    <h1>Chi Tiết Sản Phẩm @Model.TENSP</h1>
    
</div>
<body>
</body>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            @Html.Action("slideimage","Home", Model.ANHSP);
        </div>
        <div class="col-sm-6">
            <h1>Tên Sản Phẩm: @Model.TENSP</h1>
            <h3>Mã Sản Phảm: @Model.MASP</h3>
            <h3>Số Lượng: @ViewBag.slSP</h3>
            <h3>Giá: @Model.GIA</h3>
            <h3 data-toggle="collapse" data-target="#demo">Mô tả: </h3>
            <h5> @Model.MOTA </h5>
            <div id="demo" class="collapse">
               
            </div>
            <form class="form-inline my-2 my-lg-2">
                @{
                    if (ViewBag.slSP == 0)
                    {
                        <button class="btn btn-outline-success my-2 my-sm-0" disabled>Thêm giỏ hàng</button>
                        <button class="btn btn-outline-success my-2 my-sm-0" disabled>Mua ngay</button>
                    }
                    else
                    {
                        <a class="btn btn-outline-success my-2 my-sm-0" href="@Url.Action("ThemGioHang","DatHang",new {Ma= Model.MASP,select=0})">Thêm giỏ hàng</a>
                        <a class="btn btn-outline-success my-2 my-sm-0" href="@Url.Action("ThemGioHang","DatHang",new {Ma= Model.MASP,select=1})">Mua ngay</a>
                    }
                }
            </form>
        </div>
    </div>
</div>
<script>
    $(function () {
        $('#featuredCarousel').carousel({
            interval: 10000
        })
        console.log($('.item'))
        $('.item').each(function () {

            var next = $(this).next();
            console.log(next);
            if (!next.length) {
                next = $(this).siblings(':first');
            }
            next.children(':first-child').clone().appendTo($(this));

            if (next.next().length > 0) {
                next.next().children(':first-child').clone().appendTo($(this));
            } else {
                $(this).siblings(':first').children(':first-child').clone().appendTo($(this));
            }
        });
    });
</script>