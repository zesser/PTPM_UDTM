<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Scripts/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Scripts/StyleSheet1.css" rel="stylesheet" />
    <style>
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand">Navbar</a>
            <div class="collapse navbar-collapse" id="NavbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index")">Home<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown mydropdowncss">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="navbarDropdown" role="button"
                           aria-haspopup="true" aria-expanded="false">
                            Dropdown
                        </a>
                        <div class="dropdown-menu">
                            @Html.Action("lstLoaiSP");
                            <div class="dropdown-divider"></div>
                        </div>
                    </li>
                </ul>
                <div class="nav justify-content-end">
                    <form class="form-inline my-2 my-lg-0" action="@Url.Action("Search")" method="post">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="txtseach" />
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>
                    <form class="form-inline my-2 my-lg-2">
                        <a class="btn btn-outline-success my-2 my-sm-0" href="@Url.Action("Giohang")">Gio Hang</a>
                    </form>
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown mydropdowncss">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="navbarDropdown" role="button"
                               aria-haspopup="true" aria-expanded="false">
                                <img src="~/Models/Anh/user.jpg" width="25" height="25" />
                            </a>
                            <div class="dropdown-menu">
                                @{
                                            var muser = Session["UserDN"] as WedBanHang.Models.Muser;
                                            if (Session["UserDN"] == null)
                                            {
                                        <a class="dropdown-item" href="@Url.Action("Login")">Đăng Nhập</a>
                                        <a class="dropdown-item" href="@Url.Action("Register")">Đăng Ký</a>
                                    }
                                    else
                                    {
                                        var user = Session["UserDN"] as WedBanHang.Models.Muser;
                                        <a class="dropdown-item" href="@Url.Action("mUser",new {Ma=user.Login})">@user.mUserName</a>
                                        <a class="dropdown-item" href="@Url.Action("mDangxuat")">Đăng Xuất</a>
                                    }
                                }
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <div class="collapse navbar-collapse" id="NavbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    @Html.Action("lstNhom")
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <script src="~/Scripts/js/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/js/bootstrap.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <link href="~/Scripts/StyleSheet1.css" rel="stylesheet" />
</body>
</html>
