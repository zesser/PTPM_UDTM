<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Scripts/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Scripts/StyleSheet1.css" rel="stylesheet" />
    <link href="/open-iconic/font/css/open-iconic-bootstrap.css" rel="stylesheet">
    <script src="http://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="~/Scripts/js/jquery.hislide.js"></script>
    <link href="~/Scripts/jquery.hislide.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand">SUNNY</a>
            <div class="collapse navbar-collapse" id="NavbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("lstSanPham","Home")">Home<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown mydropdowncss">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="navbarDropdown" role="button"
                           aria-haspopup="true" aria-expanded="false">
                            DANH SÁCH LOẠI
                        </a>
                        <div class="dropdown-menu">
                            @Html.Action("lstLoaiSP", "Home")
                            <div class="dropdown-divider"></div>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="nav justify-content-end">
                <form class="form-inline my-2 my-lg-0" action="@Url.Action("Search","Home")" method="post">
                    <input class="form-control my-2 mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="txtseach" />
                    <button class="btn btn-outline-success my-2 mr-sm-0" type="submit">
                        <img src="~/Models/Icon/magnifying-glass.svg" width="25" height="23" />
                    </button>
                </form>
                <form class="form-inline my-2 my-lg-2">
                    <a class="btn btn-outline-success my-2 mr-sm-0" href="@Url.Action("Giohang","DatHang")">
                        <img src="~/Models/Icon/cart.svg" width="25" height="23" />
                    </a>
                </form>
                <ul class="navbar-nav my-2 my-lg-2">
                    <li class="nav-item dropdown mydropdowncss">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="navbarDropdown" role="button"
                           aria-haspopup="true" aria-expanded="false">
                            <svg width="35" height="35" viewBox="0 0 16 16" class="bi bi-file-person-fill my-2 mr-sm-0" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M2 3a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V3zm6 7a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm5 2.755C12.146 11.825 10.623 11 8 11s-4.146.826-5 1.755V13a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1v-.245z" />
                            </svg>
                        </a>
                        <div class="dropdown-menu">
                            @{
                                var muser = Session["UserDN"] as WedBanHang.Models.Muser;
                                if (Session["UserDN"] == null)
                                {
                                    <a class="dropdown-item" href="@Url.Action("Login","UserActive")">Đăng Nhập</a>
                                    <a class="dropdown-item" href="@Url.Action("Register","UserActive")">Đăng Ký</a>
                                }
                                else
                                {
                                    var user = Session["UserDN"] as WedBanHang.Models.Muser;
                                    <a class="dropdown-item" href="@Url.Action("mUser","UserActive",new {Ma=user.MaKH})">@user.mUsername</a>
                                    <a class="dropdown-item" href="@Url.Action("mDangxuat","UserActive")">Đăng Xuất</a>
                                }
                            }
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <div class="collapse navbar-collapse" id="NavbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    @Html.Action("lstPHONG", "Home")
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    <div class="container-fluid navbar-dark bg-dark text-white">
        <h1 class="navbar-header text-center">HỆ THỐNG CỬA HÀNG</h1>
        <div class="row">
            <div class="col-sm-6">
                <h3>TP.HỒ CHÍ MINH</h3>
                <p><img class="imgwhite" src="~/Models/Icon/home.svg" width="20" height="20"/> 140 Lê Trọng Tấn, Phường Tây Thạnh, Quận Tân Phú, TP.HCM</p>
                <p><img class="imgwhite" src="~/Models/Icon/phone.svg" width="20" height="20"/> (028)38161673 - (028)38163319</p>
                <p><img class="imgwhite" src="~/Models/Icon/envelope-closed.svg" width="20" height="20"/> info@hufi.edu.vn</p>
            </div>
            <div class="col-sm-6">
                <h3>HÀ NỘI</h3>
                <p><img class="imgwhite" src="~/Models/Icon/home.svg" width="20" height="20" /> 140 Lê Trọng Tấn, Phường Tây Thạnh, Quận Tân Phú, TP.HCM</p>
                <p><img class="imgwhite" src="~/Models/Icon/phone.svg" width="20" height="20"/> (028)38161673 - (028)38163319</p>
                <p><img class="imgwhite" src="~/Models/Icon/envelope-closed.svg" width="20" height="20"/> info@hufi.edu.vn</p>
            </div>
        </div>
    </div>
    <script src="~/Scripts/js/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/js/bootstrap.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <link href="~/Scripts/StyleSheet1.css" rel="stylesheet" />
</body>
</html>
