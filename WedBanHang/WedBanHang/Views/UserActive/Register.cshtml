
@{ ViewBag.Title = "Register"; }
<div class="container">
    <h2>Register <label id="checkloi" style="color:red">@Session["checkloi"]</label></h2>
    <form action="@Url.Action("InsertUserToDatabase","UserActive")" method="post" name="myForm" onsubmit="return validateForm()">
        <div class="form-group">
            <label for="demo" id="checkuser">User name(*)</label>
            <input type="text" class="form-control" id="user" placeholder="Enter username" name="txt_regUser" required>
        </div>
        <div class="form-group">
            <label for="pwd" id="pw">Password(*)</label>
            <input type="password" class="form-control" id="password1" placeholder="Enter password" name="txt_rePassword" required>
        </div>
        <div class="form-group">
            <label for="pwd" id="pw2">Nhập lại Password(*)</label>
            <input type="password" class="form-control" id="password2" placeholder="re password" name="txt_rePassword2" required>
        </div>
        <div class="form-group">
            <label for="name">Họ tên(*)</label>
            <input type="text" class="form-control" id="name" placeholder="Enter name" name="txt_Name" required>
        </div>
        <div class="form-group">
            <label for="Address">Address</label>
            <input type="text" class="form-control" id="Address" placeholder="Enter Address" name="txt_Diachi">
        </div>
        <div class="form-group">
            <label for="phone">Số điện thoại(*)</label>
            <input type="tel" class="form-control" id="phone" placeholder="Enter Phone:0**********" name="txt_Dienthoai" pattern="[0]{1}[1-9]{1}[0-9]{7}[1-9]{1}" required>
        </div>
        <div class="form-group">
            <label for="resultemail" id="email">Email(*)</label>
            <input type="email" class="form-control" id="email" placeholder="Enter Email:example@gmail.com" name="txt_mail" required>
        </div>
        <button type="submit" class="btn btn-default" id="validate">REGISTER</button>
    </form>
</div>
<script src="~/Scripts/js/JavaScript.js"></script>